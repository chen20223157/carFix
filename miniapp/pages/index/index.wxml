<!--pages/index/index.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-input" bindtap="goToSearch">
      <image class="search-icon" src="/images/search.png"></image>
      <text class="search-placeholder">搜索门店、服务项目</text>
    </view>
  </view>

  <!-- 轮播图 -->
  <view class="banner">
    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="500">
      <swiper-item wx:for="{{banners}}" wx:key="index">
        <image class="banner-image" src="{{item}}" mode="aspectFill"></image>
      </swiper-item>
    </swiper>
  </view>

  <!-- 服务分类 -->
  <view class="category-section">
    <view class="section-title">服务分类</view>
    <view class="category-list">
      <view class="category-item" wx:for="{{categories}}" wx:key="id" bindtap="selectCategory" data-id="{{item.id}}">
        <image class="category-icon" src="{{item.icon}}"></image>
        <text class="category-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- 推荐门店 -->
  <view class="store-section">
    <view class="section-header">
      <text class="section-title">推荐门店</text>
      <text class="more-link" bindtap="goToStoreList">更多 ></text>
    </view>
    <view class="store-list">
      <view class="store-item card" wx:for="{{stores}}" wx:key="id" bindtap="goToStoreDetail" data-id="{{item.id}}">
        <image class="store-logo" src="{{item.logo}}"></image>
        <view class="store-info">
          <view class="store-name">{{item.storeName}}</view>
          <view class="store-address">{{item.address}}</view>
          <view class="store-meta">
            <view class="rating">
              <image class="star-icon" src="/images/star.png"></image>
              <text>{{item.rating}}</text>
            </view>
            <text class="review-count">{{item.reviewCount}}条评价</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

