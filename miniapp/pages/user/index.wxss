/* pages/user/index.wxss */
.container {
  padding-bottom: 40rpx;
}

/* 用户头部 */
.user-header {
  margin: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.phone {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

/* 订单部分 */
.order-section {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.more-link {
  font-size: 24rpx;
  color: #999999;
}

.order-status-list {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
}

.status-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.status-name {
  font-size: 24rpx;
  color: #666666;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 16rpx;
  padding: 0 8rpx;
}

/* 车辆部分 */
.vehicle-section {
  padding: 20rpx;
}

.vehicle-list {
  padding: 24rpx;
}

.vehicle-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.vehicle-item:last-child {
  border-bottom: none;
}

.vehicle-plate {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 16rpx;
}

.vehicle-model {
  flex: 1;
  font-size: 24rpx;
  color: #999999;
}

.default-badge {
  padding: 4rpx 16rpx;
  background-color: #1890ff;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 4rpx;
}

.add-vehicle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  color: #1890ff;
  font-size: 28rpx;
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

/* 功能菜单 */
.menu-section {
  padding: 20rpx;
}

.menu-list {
  padding: 0 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

/* 退出登录 */
.logout-section {
  padding: 20rpx;
}

.btn-logout {
  width: 100%;
  background-color: #ffffff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

