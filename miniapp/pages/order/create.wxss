/* pages/order/create.wxss */
.container {
  padding-bottom: 140rpx;
}

.section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 选择器样式 */
.vehicle-selector,
.service-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.vehicle-info,
.service-info {
  flex: 1;
}

.vehicle-plate,
.service-name {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.vehicle-model {
  font-size: 24rpx;
  color: #999999;
}

.service-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.placeholder {
  flex: 1;
  color: #999999;
  font-size: 28rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 时间选择器 */
.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item text {
  font-size: 28rpx;
  color: #333333;
}

/* 备注输入 */
.remark-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 订单摘要 */
.order-summary {
  margin: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.summary-item.total {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
  margin-top: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.summary-item .label {
  color: #666666;
}

.summary-item .value {
  color: #ff4d4f;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
}

.total-price .label {
  font-size: 28rpx;
  color: #666666;
}

.total-price .price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-left: 8rpx;
}

.btn-submit {
  width: 240rpx;
  background-color: #1890ff;
  color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 999;
}

.modal.show {
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  max-height: 70vh;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.close-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 车辆列表 */
.vehicle-list {
  max-height: 60vh;
  overflow-y: auto;
}

.vehicle-item {
  padding: 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.vehicle-item.active {
  border-color: #1890ff;
  background-color: #e6f7ff;
}

.add-vehicle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  color: #1890ff;
  font-size: 28rpx;
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

/* 服务列表 */
.service-list {
  max-height: 60vh;
  overflow-y: auto;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.service-item.active {
  border-color: #1890ff;
  background-color: #e6f7ff;
}

